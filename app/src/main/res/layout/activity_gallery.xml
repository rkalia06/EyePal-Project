<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewElement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="190dp"
        />

    <Spinner
        android:id="@+id/spinnerGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop = "685dp"
        android:radius="20dp"
        android:minHeight="50dp"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:outlineSpotShadowColor="@color/black"
        android:layout_columnSpan="@integer/material_motion_duration_short_2"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_search"
        app:backgroundTint="@color/babyBlue"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="683dp"
        android:layout_gravity="right"
        android:onClick="getLinks"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_gravity="bottom"
        android:background="@drawable/bottomnavcustom"
        android:layout_marginBottom="0dp"
        android:layout_marginHorizontal="0dp"

        app:labelVisibilityMode="selected"
        app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
        app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
        app:itemActiveIndicatorStyle="@color/teal_200"

        />

</merge>